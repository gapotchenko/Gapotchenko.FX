<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <CLSCompliant>true</CLSCompliant>
    <PackageDescription>Standards-compliant implementation of data encoding algorithms belonging to the Base64 family: Base64, Base64 URL.</PackageDescription>
  </PropertyGroup>

  <ItemGroup>
    <PackageTag Include="base64;base64-url;rfc4648" />
    <CommonlyUsedPart Include="Gapotchenko.FX.Data.Encoding.Base64" />
    <CommonlyUsedPart Include="Gapotchenko.FX.Data.Encoding.Base64Url" />
  </ItemGroup>

  <PropertyGroup>
    <AnalysisMode>All</AnalysisMode>
    <WarningsAsErrors>$(WarningsAsErrors),CA1307,CA1309,CA1310</WarningsAsErrors>
    <NoWarn>$(NoWarn),CA1305,CA1510,CA1720,CA2214</NoWarn>
  </PropertyGroup>

  <ItemGroup>
    <ProjectReference Include="..\..\..\Gapotchenko.FX\Gapotchenko.FX.csproj" />
    <ProjectReference Include="..\Gapotchenko.FX.Data.Encoding\Gapotchenko.FX.Data.Encoding.csproj" />
  </ItemGroup>

</Project>
