<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <CLSCompliant>true</CLSCompliant>
    <PackageDescription>Standards-compliant implementation of data encoding algorithms belonging to the Base32 family: Base32, base32-hex, Crockford Base 32, z-base-32.</PackageDescription>
  </PropertyGroup>

  <ItemGroup>
    <PackageTag Include="base32;base32-hex;crockford-base-32;z-base-32;rfc4648" />
    <CommonlyUsedPart Include="Gapotchenko.FX.Data.Encoding.Base32" />
    <CommonlyUsedPart Include="Gapotchenko.FX.Data.Encoding.Base32Hex" />
    <CommonlyUsedPart Include="Gapotchenko.FX.Data.Encoding.CrockfordBase32" />
    <CommonlyUsedPart Include="Gapotchenko.FX.Data.Encoding.ZBase32" />
  </ItemGroup>

  <PropertyGroup>
    <AnalysisMode>All</AnalysisMode>
    <WarningsAsErrors>$(WarningsAsErrors),CA1307,CA1309,CA1310</WarningsAsErrors>
    <NoWarn>$(NoWarn),CA1305,CA1510,CA1720,CA2214</NoWarn>
  </PropertyGroup>

  <ItemGroup>
    <ProjectReference Include="..\..\..\Gapotchenko.FX.Text\Gapotchenko.FX.Text.csproj" />
    <ProjectReference Include="..\..\..\Gapotchenko.FX\Gapotchenko.FX.csproj" />
    <ProjectReference Include="..\Gapotchenko.FX.Data.Encoding\Gapotchenko.FX.Data.Encoding.csproj" />
  </ItemGroup>

</Project>
