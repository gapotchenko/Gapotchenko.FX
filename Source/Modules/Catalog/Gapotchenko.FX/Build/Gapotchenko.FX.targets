<Project xmlns="http://schemas.microsoft.com/developer/msbuild/2003">

  <Import Project="Gapotchenko.FX.Core.targets" Condition=" '$(GPFXMSBuildVersionIsOK)' == 'true' " />

  <Target Name="GPFXValidateMSBuild" BeforeTargets="CoreCompile">
