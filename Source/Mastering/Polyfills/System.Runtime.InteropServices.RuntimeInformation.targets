<Project xmlns="http://schemas.microsoft.com/developer/msbuild/2003">

  <PropertyGroup>
    <TFF_RUNTIME_INFORMATION_POLYFILL Condition=" '$(TargetFramework)' == 'net45' OR '$(TargetFramework)' == 'net46' ">true</TFF_RUNTIME_INFORMATION_POLYFILL>
  </PropertyGroup>

  <ItemGroup Condition=" '$(TFF_RUNTIME_INFORMATION_POLYFILL)' == 'true' ">
    <PackageReference Include="System.Runtime.InteropServices.RuntimeInformation">
      <Version>4.3.0</Version>
    </PackageReference>
  </ItemGroup>

  <PropertyGroup Condition=" '$(TFF_RUNTIME_INFORMATION_POLYFILL)' == 'true' ">
    <DefineConstants>$(DefineConstants);TFF_RUNTIME_INFORMATION</DefineConstants>
  </PropertyGroup>

</Project>
