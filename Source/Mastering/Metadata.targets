<?xml version="1.0" encoding="utf-8"?>
<Project xmlns="http://schemas.microsoft.com/developer/msbuild/2003">

  <!-- Product Information -->
  <PropertyGroup>
    <Company>Gapotchenko</Company>
    <Product>Gapotchenko.FX</Product>
    <Description>.NET polyfill to the future. A versatile RAD framework for .NET platform.</Description>
    <Copyright>Copyright © 2019-2020 Gapotchenko and Contributors</Copyright>
  </PropertyGroup>

  <!-- Assembly Information -->
  <PropertyGroup>
    <AssemblyVersion>2020.1.1.16010</AssemblyVersion>
    <FileVersion>2020.1.1.16010</FileVersion>
    <InformationalVersion>2020.1.1 (Beta Release build 2020.1.1.16010)</InformationalVersion>
  </PropertyGroup>

  <!-- =================================================================== -->

  <PropertyGroup>
    <IsPublicProject>false</IsPublicProject>
    <IsPublicProject Condition=" !($(MSBuildProjectName.EndsWith('.Test')) OR $(MSBuildProjectName.Contains('.Test.')) OR $(MSBuildProjectName.Contains('.Harness.'))) ">true</IsPublicProject>
  </PropertyGroup>

  <PropertyGroup>
    <DefineConstants>$(DefineConstants);DISABLE_ASSEMBLY_METADATA_ATTRIBUTES</DefineConstants>
    <NeutralLanguage>en-US</NeutralLanguage>
    <GenerateDocumentationFile>$(IsPublicProject)</GenerateDocumentationFile>
  </PropertyGroup>

  <PropertyGroup Condition=" '$(Configuration)' == 'Release' ">
    <DebugType>none</DebugType>
    <DebugSymbols>false</DebugSymbols>
  </PropertyGroup>

  <!-- =================================================================== -->

  <ItemGroup>
    <Compile Include="$(MSBuildThisFileDirectory)AssemblyMetadata.cs" Link="Properties\AssemblyMetadata.cs" />
  </ItemGroup>

  <!-- =================================================================== -->

  <Import Project="NuGet.targets" />
  <Import Project="TargetFrameworks.targets" />
  <Import Project="AssemblySignature.targets" />
  <Import Project="Optimization.targets" Condition=" Exists('Optimization.targets') " />
  <Import Project="AuthenticodeSignature.targets" />

</Project>
