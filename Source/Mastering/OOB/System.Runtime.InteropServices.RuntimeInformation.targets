<Project xmlns="http://schemas.microsoft.com/developer/msbuild/2003">

  <PropertyGroup>
    <TPF_RUNTIME_INFORMATION_OOB Condition=" '$(TargetFramework)' == 'net45' OR '$(TargetFramework)' == 'net46' ">true</TPF_RUNTIME_INFORMATION_OOB>
  </PropertyGroup>

  <ItemGroup Condition=" '$(TPF_RUNTIME_INFORMATION_OOB)' == 'true' ">
    <PackageReference Include="System.Runtime.InteropServices.RuntimeInformation">
      <Version>4.3.0</Version>
    </PackageReference>
  </ItemGroup>

  <PropertyGroup Condition=" '$(TPF_RUNTIME_INFORMATION_OOB)' == 'true' ">
    <DefineConstants>$(DefineConstants);TFF_RUNTIME_INFORMATION</DefineConstants>
  </PropertyGroup>

</Project>
