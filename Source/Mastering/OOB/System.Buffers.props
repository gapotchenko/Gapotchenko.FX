<Project>

  <PropertyGroup>
    <TFF_SYSTEM_BUFFERS_OOB Condition=" '$(MasteringFrameworkIdentifier)' == '.NETFramework' OR ('$(MasteringFrameworkIdentifier)' == '.NETStandard' AND $([MSBuild]::VersionLessThan($(MasteringFrameworkVersion), '2.1'))) ">true</TFF_SYSTEM_BUFFERS_OOB>
  </PropertyGroup>

  <ItemGroup Condition=" '$(TFF_SYSTEM_BUFFERS_OOB)' == 'true' ">
    <PackageReference Include="System.Buffers" Version="4.5.1" />
    <MasteringFrameworkFeature Include="TFF_SYSTEM_BUFFERS;TFF_SYSTEM_BUFFERS_OOB" />
  </ItemGroup>

</Project>
