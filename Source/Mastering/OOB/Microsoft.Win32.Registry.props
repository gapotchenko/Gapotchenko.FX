<Project>

  <PropertyGroup>
    <TFF_WIN32_REGISTRY_OOB Condition=" '$(MasteringFrameworkIdentifier)' == '.NETStandard' OR ('$(MasteringFrameworkIdentifier)' == '.NETCoreApp' AND $([MSBuild]::VersionGreaterThan($(MasteringFrameworkVersion), '1.1')) AND $([MSBuild]::VersionLessThan($(MasteringFrameworkVersion), '6.0'))) ">true</TFF_WIN32_REGISTRY_OOB>
  </PropertyGroup>

  <ItemGroup Condition=" '$(TFF_WIN32_REGISTRY_OOB)' == 'true' ">
    <PackageReference Include="Microsoft.Win32.Registry" Version="4.5.0" />
    <MasteringFrameworkFeature Include="TFF_WIN32_REGISTRY;TFF_WIN32_REGISTRY_OOB" />
  </ItemGroup>

</Project>
