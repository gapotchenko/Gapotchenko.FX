<Project>

  <PropertyGroup>
    <TFF_VALUETASK_OOB Condition=" '$(MasteringFrameworkIdentifier)' == '.NETFramework' ">true</TFF_VALUETASK_OOB>
    <TFF_VALUETASK_OOB Condition=" '$(MasteringFrameworkIdentifier)' == '.NETStandard' AND $([MSBuild]::VersionLessThan($(MasteringFrameworkVersion), '2.1')) ">true</TFF_VALUETASK_OOB>
    <TFF_VALUETASK_OOB Condition=" '$(MasteringFrameworkIdentifier)' == '.NETCoreApp' AND $([MSBuild]::VersionLessThan($(MasteringFrameworkVersion), '2.0')) ">true</TFF_VALUETASK_OOB>
  </PropertyGroup>

  <ItemGroup Condition=" '$(TFF_VALUETASK_OOB)' == 'true' ">
    <PackageReference Include="System.Threading.Tasks.Extensions" Version="4.6.3" />
    <MasteringFrameworkFeature Include="TFF_VALUETASK;TFF_VALUETASK_OOB" />
  </ItemGroup>

</Project>
